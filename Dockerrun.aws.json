{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "andymac007/lrh-client",
            "hostname":"client",
            "essential": false
        },
        {
            "name": "server",
            "image": "andymac007/lrh-server",
            "hostname":"api",
            "essential": false
        },
        {
            "name":"nginx",
            "image": "andymac007/lrh-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}